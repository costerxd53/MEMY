<?xml version='1.0' encoding='utf-8'?>
<widget id="pl.cstron.memy" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Memiki</name>
    <description>
       Najlepsze Memy w Internecie
    </description>
    <author email="costerxd53@gmail.com" href="http://cstron.pl">
        Cstron
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.2" />
    <platform name="android">
        <icon density="ldpi" src="ikona.png" />
        <icon density="mdpi" src="ikona.png" />
        <icon density="hdpi" src="ikona.png" />
        <icon density="xhdpi" src="ikona.png" />
        <icon density="xxhdpi" src="ikona.png" />
        <icon density="xxxhdpi" src="ikona.png" />
        <splash density="land-ldpi" src="screen.png" />
        <splash density="land-mdpi" src="screen.png" />
        <splash density="land-hdpi" src="screen.png" />
        <splash density="land-xhdpi" src="screen.png" />
        <splash density="land-xxhdpi" src="screen.png" />
        <splash density="land-xxxhdpi" src="screen.png" />
        <splash density="port-ldpi" src="screen.png" />
        <splash density="port-mdpi" src="screen.png" />
        <splash density="port-hdpi" src="screen.png" />
        <splash density="port-xhdpi" src="screen.png" />
        <splash density="port-xxhdpi" src="screen.png" />
        <splash density="port-xxxhdpi" src="screen.png" />
    </platform>
    <platform name="ios">
       
    </platform>
    <platform name="wp8">
    </platform>
    <platform name="windows">
    </platform>
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
